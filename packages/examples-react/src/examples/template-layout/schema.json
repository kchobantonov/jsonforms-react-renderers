{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "firstName": {
      "type": "string",
      "minLength": 3,
      "description": "Please enter your first name",
      "i18n": "firstName"
    },
    "lastName": {
      "type": "string",
      "minLength": 3,
      "description": "Please enter your last name",
      "i18n": "lastName"
    },
    "birthDate": {
      "type": "string",
      "format": "date",
      "i18n": "birth"
    },
    "nationality": {
      "type": "string",
      "enum": ["US", "BG", "DE", "JP", "RU", "Other"],
      "i18n": "nationality"
    }
  },
  "required": ["nationality"]
}
