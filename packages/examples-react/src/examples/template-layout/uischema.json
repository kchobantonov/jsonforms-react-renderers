{
  "type": "TemplateLayout",
  "template": "{elements}",
  "name": "root",
  "elements": [
    {
      "type": "TemplateLayout",
      "template": "{elements['name']}",
      "name": "header",
      "elements": [
        {
          "type": "TemplateLayout",
          "name": "name",
          "template": "<div>Hello {data.firstName} {data.lastName}</div>"
        }
      ]
    },
    {
      "type": "TemplateLayout",
      "template": "{elements}",
      "elements": [
        {
          "type": "TemplateLayout",
          "template": "<div>{errors.length > 0 && (<div> {errors.map((error, index) => { if (typeof Message !== 'undefined') { return <div><Message key={index} severity='error' text={error.message} /></div>; } else if (typeof Alert !== 'undefined') { return <div><Alert key={index} message={error.message} type='error' /></div>; } else { return null; } })} </div>)}</div>"
        },
        {
          "type": "VerticalLayout",
          "elements": [
            {
              "type": "Control",
              "scope": "#/properties/firstName"
            },
            {
              "type": "Control",
              "scope": "#/properties/lastName"
            }
          ]
        },
        {
          "type": "VerticalLayout",
          "elements": [
            {
              "type": "Control",
              "scope": "#/properties/birthDate"
            },
            {
              "type": "Control",
              "scope": "#/properties/nationality"
            }
          ]
        }
      ]
    }
  ]
}
